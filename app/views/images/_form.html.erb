<%= form_for(@image, {:html => {:multipart => true}}) do |f| %>
	<%= f.hidden_field :gallery, :value => @gallery[:slug] %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% unless @gallery[:width] %>
	  <div class="field">
	    <%= f.label :width %>
	    <%= f.text_field :width %>
	  </div>

	  <div class="field">
	    <%= f.label :height %>
	    <%= f.text_field :height %>
	  </div>
	<% end %>

	<div class="field">
    <%= f.label :image_file %>
    <%= f.file_field :file %>
    <%= f.hidden_field :file_cache %>
  </div>
	<% unless @image.new_record? %>
	 	<div>
			<%= image_tag @image.file.url %>
		</div>
	<% end %>

	<div class="button confirm_button">
  	<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>
