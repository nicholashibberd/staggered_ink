<%= form_for(@image, {:url => image_form_path(@gallery.name, @image), :html => {:multipart => true}}) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>	
  
	<% if @image.is_a?(ContentImage) %>
	  <div class="field">
	    <%= f.label :width %>
	    <%= f.text_field :width %>
	  </div>
	  <div class="field">
	    <%= f.label :height %>
	    <%= f.text_field :height %>
	  </div>
	<% end %>
	
	<div class="field">
    <%= f.label :image_file %>
    <%= f.file_field :file %>
    <%= f.hidden_field :file_cache %>
  </div>
	<% unless @image.new_record? %>
	 	<div>
			<%= image_tag @image.file.url %>
		</div>
	<% end %>

	<div class="button confirm_button">
  	<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>
