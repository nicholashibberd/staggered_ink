<%= form_for(@document, {:html => {:multipart => true}}) do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :document %>
		<%= f.file_field :file %>
	</div>  
	<div class="button confirm_button">
  	<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end -%>